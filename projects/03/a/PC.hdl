/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    Mux16(a=o, b=in, sel=load, out=l);
    Mux16(a=l, b=false, sel=reset, out=re);
    Inc16(in=o, out=incr);
    Or(a=load, b=reset, out=reorl);
    Mux(a=inc, b=false, sel=reorl, out=xinc);
    Mux16(a=re, b=incr, sel=xinc, out=i);
    Register(in=i, load=true, out=o, out=out);
    }
